<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Sections -->
        <record id="edit_project" model="ir.ui.view">
            <field name="name">project.project.form.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Project Sections">
                        <field name="section_line">
                            <tree string="Section Lines" editable="bottom">
                                <field name="project_section_id"/>
                                <field name="labor"/>
                                <field name="wage_rate"/>
                                <field name="planned_cost"/>
                            </tree>
                        </field>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="amount_total_labor"/>
                            <field name="amount_total_cost" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="section_view_form" model="ir.ui.view">
            <field name="name">Project Section Form</field>
            <field name="model">project.section</field>
            <field name="arch" type="xml">
                <form string="Section Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="project_section_id"/>
                                <field name="project_section_line_id"/>
                            </group>
                            <group>
                                <field name="labor"/>
                                <field name="wage_rate"/>
                                <field name="planned_cost"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="section_view_tree" model="ir.ui.view">
            <field name="name">Project Section Tree</field>
            <field name="model">project.section</field>
            <field name="arch" type="xml">
                <tree string="Section">
                    <field name="project_section_id"/>
                    <field name="project_section_line_id"/>
                    <field name="labor"/>
                    <field name="wage_rate"/>
                    <field name="planned_cost"/>
                </tree>
            </field>
        </record>

        <record id="open_section_form" model="ir.actions.act_window">
            <field name="name">Sections</field>
            <field name="res_model">project.section</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="section_view_tree"/>
        </record>

        <menuitem action="open_section_form"
                  id="menu_section_view"
                  parent="project.menu_project_config" sequence="9"/>

        <!--List of project sections-->
        <record id="section_list_view_tree" model="ir.ui.view">
            <field name="name">Project Section List Tree</field>
            <field name="model">project.section.list</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="short_name"/>
                    <field name="long_name"/>
                    <field name="sequence" widget="handle"/>
                </tree>
            </field>
        </record>

        <record id="section_list_view_form" model="ir.ui.view">
            <field name="name">Project Section List Form</field>
            <field name="model">project.section.list</field>
            <field name="arch" type="xml">
                <tree string="Section list">
                    <field name="short_name"/>
                    <field name="long_name"/>
                    <field name="sequence"/>
                </tree>
            </field>
        </record>

        <record id="open_section_list_form" model="ir.actions.act_window">
            <field name="name">List of Project Sections</field>
            <field name="res_model">project.section.list</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="section_list_view_tree"/>
        </record>

        <menuitem action="open_section_list_form"
                  id="menu_section_list_view"
                  parent="project.menu_project_config" sequence="8"/>

        <!--Add sections by project task-->
        <record id="view_task_search_form" model="ir.ui.view">
            <field name="name">project.task.filter</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <field name="project_id" position="after">
                    <field name="section_id"/>
                </field>
                <!--<filter position="after">-->
                    <!--<filter string="Section" name="section_for_this_project"-->
                            <!--icon="terp-folder-violet" domain="[]"-->
                            <!--context="{'group_by':'section_id'}"/>-->
                <!--</filter>-->
            </field>
        </record>

        <record id="view_task_form" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <field name="project_id" position="after">
                    <field name="section_id"
                           domain="[('project_section_line_id','like', project_id)]"/>
                </field>
            </field>
        </record>

        <record id="view_task_tree" model="ir.ui.view">
            <field name="name">project.task.tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <field name="date_deadline" position="after">
                    <field name="section_id" invisible="True"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
